<div class="box">
  <h2>Update <%= $redis.hget("student:#{@id}", "name")%>'s Note</h2>

    <div class="update-note">
      <form action="/note/student/<%= @id %>&<%= @note_id %>" method="post">
        <label>
          <textarea type="text" style="height:100px;width:200px" name="progress_note"><%= JSON.parse(@note)[2] %></textarea>
        </label>
        <input type="submit" name="Update">
        <div class="update-rating">
          <strong class="choice">Behavior</strong>
          <span class="star-rating">
            <input type="radio" name="rating" value="1"><i></i>
            <input type="radio" name="rating" value="2"><i></i>
            <input type="radio" name="rating" value="3"><i></i>
            <input type="radio" name="rating" value="4"><i></i>
            <input type="radio" name="rating" value="5"><i></i>
          </span>
        </div>
      </form>
    </div>
</div>



